@model IEnumerable<ERP.Web.Models.Client>

<h2 class="my-4">Lista de Clientes</h2>
<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Agregar Cliente</a>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Fecha de Creación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.Email</td>
                    <td>@client.Phone</td>
                    <td>@client.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Edit", new { id = client.Id })" class="btn btn-warning btn-sm">Editar</a>

                        <!-- Formulario para eliminar un cliente -->
                        <form asp-action="Delete" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este cliente?');">
                            <input type="hidden" name="id" value="@client.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </div>
                </td>

                </tr>
        }
    </tbody>
</table>
